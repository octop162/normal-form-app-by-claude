# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2
max_line_length = 120

# HTML files
[*.{html,htm}]
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Python files (if needed in future)
[*.py]
indent_size = 4
max_line_length = 120

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Git files
[.gitignore]
indent_size = 2

# CI/CD files
[.{travis,gitlab-ci}.yml]
indent_size = 2

[.github/**/*.{yml,yaml}]
indent_size = 2